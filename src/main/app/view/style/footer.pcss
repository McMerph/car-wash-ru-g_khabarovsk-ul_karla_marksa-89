footer {
  background-color: #363636;
  margin: 0 -5px;

  & .footer-content {
    font: normal 300 18px/2 var(--open-sans-font-stack);
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 43px 0;

    & > * {
      display: flex;
      align-items: center;
    }

    & .company-info {
      & .company-name {
        color: #a8a8a8;
        font: normal 300 18px/2 var(--proxima-nova-font-stack);
      }

      & img.logo {
        flex: 0 0 52px;
        margin-right: 8px;
      }
    }

    & .bar {
      height: 72px;
      border-left: 1px solid #626262;
    }

    & nav a {
      @apply --underline-decoration;

      color: #adadad;
      margin: 0 5px;

      &::before {
        bottom: 7px;
      }

      &:hover {
        color: #0056b3;
      }
    }

    & div.account {
      & a {
        @apply --underline-decoration;

        color: #efeab1;

        &::before {
          bottom: 6px;
          border-bottom: 1px dashed;
        }

        &:hover {
          color: #0056b3;
        }
      }

      & img.account-logo {
        flex: 0 0 24px;
        margin-right: 20px;
      }
    }
  }
}

@media (max-width: 730px) {
  footer .footer-content {
    & nav {
      flex-direction: column;
    }
  }
}

@media (max-width: 590px) {
  footer .footer-content .company-info {
    flex-direction: column;
  }
}

@media (max-width: 530px) {
  footer .footer-content {
    flex-direction: column;

    & .company-info {
      flex-direction: row;
    }

    & nav {
      flex-direction: row;
      margin: 15px 0;
    }

    & .bar {
      display: none;
    }
  }
}
