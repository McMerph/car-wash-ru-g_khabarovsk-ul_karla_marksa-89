.touch-test {
    height: 100px;
    position: relative;
    overflow: hidden;
}

.slide {
    overflow: hidden;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.slide-animating {
    transition: transform 200ms linear;
}

.slide-left {
    transform: translate3d(-100%, 0, 0);
    background-color: red;
}

.slide-center {
    transform: translate3d(0, 0, 0);
    background-color: green;
}

.slide-right {
    transform: translate3d(100%, 0, 0);
    background-color: blue;
}
