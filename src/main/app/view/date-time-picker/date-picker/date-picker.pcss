@import '../../style/variables.pcss';
@import '../../style/apply.pcss';

#date-picker {
    max-width: 430px;
    & .controls {
        display: flex;
        justify-content: center;
        & button.previous, button.next {
            @apply --reset-button;
            padding: 20px 0;
            width: 24px;
            height: 24px;
            background: transparent url(../../../../resources/img/arrow-right.png) no-repeat center center;
            &.previous {
                transform: rotate(180deg);
                margin-right: 10px;
            }
            &.next {
                margin-left: 10px;
            }
        }
        & select {
            cursor: pointer;
            appearance: none;
            border: none;
            outline: 0;
            color: #303030;
            font: normal 400 22px "Proxima Nova";
            &::-ms-expand {
                display: none;
            }
            &::-ms-value {
                background: none;
                color: #303030;
            }
        }
    }
    & div.month {
        border-left: 1px solid var(--picker-border-color);
        & .week, header {
            width: 100%;
            margin: 0;
            display: flex;
            & > * {
                flex: 1 1 14.28571428571428571429%;
                text-align: center;
                border-right: 1px solid var(--picker-border-color);
                border-bottom: 1px solid var(--picker-border-color);
            }
        }
        & header {
            & > * {
                border-top: 1px solid var(--picker-border-color);
                color: #303030;
                font: normal 400 14px "Proxima Nova";
            }
        }
        & .week {
            & button.pick {
                @apply --picker-button;
                color: #303030;
                font: normal 400 22px "Proxima Nova";
                user-select: none;
                &.picked {
                    background-color: #ffd800;
                }
                &.today {
                    color: #00aeef;
                }
                &.past {
                    pointer-events: none;
                    background-color: #dddddd;
                }
                &.disabled:not(.past) {
                    pointer-events: none;
                    background-color: var(--red-color);
                }
            }
        }
    }
}
