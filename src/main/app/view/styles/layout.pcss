body {
  min-width: 310px;
  padding: 0 5px 0 5px;
}

main {
  padding: 27px 0 112px 0;
}

.dimensioned {
  box-sizing: border-box;
  margin: 0 auto;
  overflow: hidden;
  max-width: 1220px;
  padding: 0 30px;
}

.content-wrapper {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  margin: 0 -12px;
}

.profile,
.info {
  padding: 0 12px;
}

.profile {
  margin-bottom: 45px;
  flex: 1 1 395px;
}

.info {
  flex: 2 1 741px;
}

@media (max-width: 1250px) {
  .profile {
    flex-basis: 310px;
  }

  .info {
    flex-basis: 500px;
  }
}

@media (max-width: 640px) {
  .info__notes {
    column-count: 1;
  }
}

@media (max-width: 510px) {
  .dimensioned {
    padding: 0;
  }

  .info__notes {
    background-size: contain;
  }
}
