@import 'root.pcss';

html {
  background: var(--background-color);
  touch-action: manipulation;
}

a {
  cursor: pointer;

  &:hover {
    color: var(--hover-color);
  }
}

button {
  cursor: pointer;
}

.horizontal-test {
  height: 100px;
}

.dummy {
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 24px;
}

.red {
  background: red;
}

.green {
  background: green;
}

.blue {
  background: blue;
}
